<div class="container d-flex flex-row align-items-center justify-content-center">
    <div class="">
      <div class="recipe-img">
        <% if @cocktail.cocktail_photo.attached? %>
          <%= cl_image_tag @cocktail.cocktail_photo.key, width:400 %>
        <% else %>
          <%= image_tag 'cocktail.png', width:400 %>
        <% end %>
      </div>
    </div>

    <div class="d flex-column">
      <div class="recipe-title">
        <h2><%= @cocktail.name %></h2>
        <p>REVIEWS</p>
      </div>

      <div class="recipe-content">
        <div class="ingredients">
          <h2>INGREDIENTS
          <span><%= link_to '<i class="fas fa-edit"></i>'.html_safe, new_cocktail_dose_path(@cocktail) %></span></h2>
        </div>

        <ul>
          <% @doses.each do |dose| %>
            <li>
              <%= "#{dose.description} of #{dose.ingredient.name}" %>
              <%= link_to '<i class="fas fa-trash"></i>'.html_safe, dose_path(dose),
              method: :delete, data: { confirm: "Are you sure?" } %>
              <hr>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

</div>

